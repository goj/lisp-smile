load "smile.scm"

define | translate
  define *parser* | setup-parser [current-input-port] #f
  let grande-lupe ()
    let || parsed | parse *parser*
      unless | eqv? parsed EOF
        pretty-print parsed
        grande-lupe

if | null? | cdr | program-arguments
  translate
  with-input-from-file [cadr | program-arguments] translate
